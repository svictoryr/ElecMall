{{>layouts/header}}
<div class="container my-4">
    <h1 class="text-center mb-4"><b>일렉몰 게시판</b></h1>
    <form action ="/elecmall/board/list" method="get" class="mb-4">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <div class="d-flex justify-content-between align-items-center">
            <div class="me-2">
                <select name="type" class="form-select" aria-label="Select board type" onchange="this.form.submit()">
                    <option valeus="default"><b>유형 선택</b></option>
                    <option value="all">모든 게시글</option>
                    <option value="n">공지</option>
                    <option value="q">문의</option>
                    <option value="r">후기</option>
                </select>
            </div>
        </div>
    </form>
</div>
<style>
    .table thead th {
            background-color: #f8f9fa;
            color: #495057;
        }
        .table tbody tr:hover {
            background-color: #f1f3f5;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
{{#message}}
    <div class="alert alert-success">{{message}}</div>
{{/message}}
<table class="table table-hober table-bordered">
    <thead>
    <tr>
        <th>글 번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>작성일</th>
        <th>조회수</th>
    </tr>
    </thead>
    <tbody>
    {{#boardItemAll}}
        <tr>
            <td>{{boardId}}</td>
            <td><a href = /elecmall/board/{{boardId}} class="text-decoration-none"">{{boardTitle}}</td>
            <td>{{boardAuthor}}</td>
            <td>{{writeDate}}</td>
            <td>{{count}}</td>
        </tr>
    {{/boardItemAll}}
    </tbody>
</table>
<div class="text-end mt-4">
    <a href="/elecmall/board/new_form" class="btn btn-primary">새 글 작성</a>
</div>
{{>layouts/footer}}